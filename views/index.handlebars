<img id="burger-pic" src="./assets/img/burger.png">

<h1>Eat Burger</h1>

{{!-- <form class="create-update-form" action="/" method="POST"> --}}

<div class="form-group">
	<label class="sr-only">What Are You Hungry for Today?</label>
	<textarea name="burger-text" placeholder="Enter Your Burger Here" class="burger-text" id="burger-text"></textarea>
</div>

<button id="add-burger">Get Burger</button>
{{!-- </form> --}}
<div>
	<h2>Have a burger</h2>
	<ul>
		{{#each burgers}}
		{{#unless this.devoured}}
		<li data-id="{{this.id}}">
			{{this.burger_name}}
			<button class="eat" data-id="{{this.id}}">Eat Burger</button>
		</li> 
		{{/unless}}
		{{/each}}
	</ul>

	<h2>Devoured already</h2>

	<ul>
		{{#each burgers}}
		{{#if this.devoured}}
		<li data-id="{{this.id}}">
			{{this.burger_name}}
		</li>
		{{/if}}
		{{/each}}
	</ul>
	
</div>